<header>
    <nav class="navbar navbar-expand-lg fixed-top navbar-light mb-5">
        <a class="navbar-brand text-white font-weight-bold" href="/newsfeed">Starbook <span
                class="navbar-text text-info font-italic text-left"> A space trip!
            </span></a>
        <button class="navbar-toggler bg-light" type="button" data-toggle="collapse" data-target="#navbarResponsive"
            aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon toggler"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link text-info" href="/newsfeed">Newsfeed</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<div class="containerProfile text-white">
    <p class="username">welcome to the galaxy, {{user.username}}!</p>
    <img class="profilePic" onerror="if (src != "{{user.profileImg.image}}") src = '/images/defaultImg.jpg';" src="{{user.profileImg.image}}" width="240px" height="240px" />
    <p>homeworld: {{planet}}</p>
    <p>age: {{user.age}}</p>
    <p class="aboutMe">about me: {{user.bio}}</p>
    <p>my spaceship: {{user.spaceship}}</p>
    <p>i am: {{user.species}}</p>
</div>

{{#if loggedInUser}}
<div class="functionalities">
    <div>
        <a class="text-white funcionalitiesElem" href="/addpost">write a post</a>
    </div>
    <div>
        <a class="text-white funcionalitiesElem" href="/editProfile/{{user._id}}">edit your profile</a>
    </div>
    <div>
        {{!-- this should be a form! --}}
        <form action="/deleteprofile/{{user._id}}">
            <button class="btn btn-lg btn-block text-center" type="submit"><a
                    class="text-info"> delete my profile (think twice)</a></button>
        </form>
        {{!-- this should be a form! --}}
    </div>
</div>
{{/if}}