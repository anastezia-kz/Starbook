<h1>Edit your profile!</h1>

{{!-- image upload --}}

<h3>Update your profile picture</h3>
<div class="photos-wrapper">
  {{#each photos}}
    <div class="photo-item">
      <img src="{{this.imgPath}}" alt="">
      {{!-- <h4>{{this.title}}</h4>
      <p>{{this.description}}</p> --}}
    </div>
  {{else}}
    <p>You are using a default picture</p>
    <p>You can do better!</p>
  {{/each}}
</div>

{{!-- edit profile info --}}

<form action="" method="post">
  <label for="age">Enter your age:</label>
<input type="text" name="age">
<label for="description">Tell something about yourself:</label>
<input type="text" name="description">

<label for="homeworlds">Choose your home world:</label>
<select id="homeworlds" name="worldlist" form="worldform">
  {{#each planets}}
  <option value="{{this.name}}">{{this.name}}</option>
  {{/each}}
</select>
<button type="submit">Save</button>
</form>
